<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="MeUEditText">
        <attr name="backgroundBefore" format="reference|integer" />
        <attr name="backgroundAfter" format="reference|integer" />

        <attr name="hintText" format="reference|string" />
        <attr name="hintTextColorBefore" format="reference|color" />
        <attr name="hintTextColorAfter" format="reference|color" />
        <attr name="hintTextSizeBefore" format="reference|dimension" />
        <attr name="hintTextSizeAfter" format="reference|dimension" />

        <attr name="hintTextVerticalPositionBefore" format="enum">
            <enum name="top" value="-1" />
            <enum name="center" value="0" />
            <enum name="bottom" value="1" />
        </attr>
        <attr name="hintTextVerticalPositionAfter" format="enum">
            <enum name="top" value="-1" />
            <enum name="center" value="0" />
            <enum name="bottom" value="1" />
        </attr>
        <attr name="hintTextHorizontalPositionBefore" format="enum">
            <enum name="left" value="-1" />
            <enum name="start" value="-1" />
            <enum name="center" value="0" />
            <enum name="right" value="1" />
            <enum name="end" value="1" />
        </attr>
        <attr name="hintTextHorizontalPositionAfter" format="enum">
            <enum name="left" value="-1" />
            <enum name="start" value="-1" />
            <enum name="center" value="0" />
            <enum name="right" value="1" />
            <enum name="end" value="1" />
        </attr>

        <attr name="editText" format="reference|string" />
        <attr name="editTextColor" format="reference|color" />
        <attr name="editTextSize" format="reference|dimension" />
        <attr name="animateDuration" format="integer" />

        <attr name="animateState" format="enum" >
            <enum name="never" value="-1" />
            <enum name="always" value="0" />
            <enum name="firstTime" value="1" />
            <enum name="onNoText" value="2" />
        </attr>
    </declare-styleable>


</resources>
