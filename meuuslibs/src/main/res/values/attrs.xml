<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="MeUEditText">
        <attr name="backgroundBeforeFocus" format="reference|integer" />
        <attr name="backgroundAfterFocus" format="reference|integer" />

        <attr name="hintText" format="reference|string" />
        <attr name="hintTextColorBeforeFocus" format="reference|integer" />
        <attr name="hintTextColorAfterFocus" format="reference|integer" />
        <attr name="hintTextSizeBeforeFocus" format="reference|float" />
        <attr name="hintTextSizeAfterFocus" format="reference|float" />

        <attr name="hintTextVerticalPositionBeforeFocus" format="enum">
            <enum name="top" value="-1" />
            <enum name="center" value="0" />
            <enum name="bottom" value="1" />
        </attr>
        <attr name="hintTextVerticalPositionAfterFocus" format="enum">
            <enum name="top" value="-1" />
            <enum name="center" value="0" />
            <enum name="bottom" value="1" />
        </attr>
        <attr name="hintTextHorizontalPositionBeforeFocus" format="enum">
            <enum name="left" value="-1" />
            <enum name="start" value="-1" />
            <enum name="center" value="0" />
            <enum name="right" value="1" />
            <enum name="end" value="1" />
        </attr>
        <attr name="hintTextHorizontalPositionAfterFocus" format="enum">
            <enum name="left" value="-1" />
            <enum name="start" value="-1" />
            <enum name="center" value="0" />
            <enum name="right" value="1" />
            <enum name="end" value="1" />
        </attr>

        <attr name="editText" format="reference|string" />
        <attr name="editTextColor" format="reference|integer" />
        <attr name="editTextSize" format="reference|float" />
    </declare-styleable>
</resources>
